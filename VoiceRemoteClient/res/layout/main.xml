<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello" android:gravity="center_horizontal" style="@style/Title"/>
<Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/button" android:id="@+id/record_button"></Button>
<TextView android:layout_width="fill_parent" android:scrollbars="vertical" android:scrollbarAlwaysDrawHorizontalTrack="true" android:id="@+id/console" android:layout_height="wrap_content" android:layout_weight="1"></TextView>
<Button android:layout_height="wrap_content" android:layout_gravity="bottom" android:layout_width="fill_parent" android:text="Exit" android:id="@+id/Exit"></Button>

</LinearLayout>
